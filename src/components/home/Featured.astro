---
import { getCollection } from "astro:content";

import FeaturedCard from "./FeaturedCard.astro";

const featured = await getCollection("featured");
---

{
    (
        <ul role="list" class="featured-grid">
            {featured.map((item) => (
                <FeaturedCard
                    href={item.data.href}
                    title={item.data.title}
                    body={item.data.body}
                    type={item.data.type}
                    tags={item.data.tags}
                />
            ))}
        </ul>
    )
}

<style>
    .featured-grid {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        margin: 0 0 3rem;
        padding: 0;
        width: 100%;
    }

    @media (max-width: 720px) {
        .featured-grid {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
