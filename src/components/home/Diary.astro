---
import { getCollection } from "astro:content";

const entries = (await getCollection("diary")).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

const N = 5;

const renderedEntries = await Promise.all(
    entries.slice(0, N).map(async (entry) => {
        const { Content } = await entry.render();
        return {
            ...entry,
            renderedBody: Content,
        };
    }),
);
---

<div class="diary">
    <ul>
        {
            renderedEntries.map((entry) => (
                <li>
                    <span class="date">
                        {(() => {
                            const date = entry.data.date;
                            const month = new Intl.DateTimeFormat("en", {
                                month: "short",
                            }).format(date);
                            const year = date
                                .getFullYear()
                                .toString()
                                .slice(-2);
                            return `[${month} '${year}]`;
                        })()}
                    </span>
                    <entry.renderedBody />
                </li>
            ))
        }
    </ul>
    {
        entries.length > N && (
            <a href="/archive/news">
                <span>&rarr;</span>
                News Archive
            </a>
        )
    }
</div>
<style>
    .diary {
        margin-bottom: 3rem;
        position: relative;
    }
    .diary ul {
        width: 100%;
        margin: 0;
        padding-bottom: 0;
        list-style: none;
        padding: 0;
    }
    .diary ul li {
        width: 100%;
        font-size: 1rem;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding-bottom: 1rem;
        margin-bottom: 0;
        position: relative;
        padding-left: 2rem;
    }
    .diary ul li::before {
        content: "";
        position: absolute;
        left: calc(2rem - 1rem - 3px);
        top: 0.5rem;
        width: 8px;
        height: 8px;
        background-color: var(--accent);
        border-radius: 50%;
        z-index: 2;
    }
    .diary ul li::after {
        content: "";
        position: absolute;
        left: calc(2rem - 1rem);
        top: 0.525rem;
        width: 2px;
        height: calc(100% + 0.5rem);
        background-color: var(--accent);
        z-index: 1;
    }
    .diary ul li:last-child::after {
        display: block;
        background: linear-gradient(
            to bottom,
            var(--accent) 0%,
            var(--accent) 50%,
            transparent 50%,
            transparent 100%
        );
        background-size: 2px 8px;
        height: 2rem;
    }
    .diary::after {
        display: none;
    }
    .diary ul li :global(a) {
        text-decoration: none;
    }
    .diary ul li .date {
        color: var(--accent);
        min-width: 6.2rem;
        font-size: 1rem;
        flex-shrink: 0;
        margin-top: 0;
    }
    .diary ul li :global(> *) {
        margin-top: 0;
        line-height: 1.5;
    }
    .diary ul li :global(p:first-child) {
        margin-top: 0;
    }
    .diary ul li:last-child {
        padding-bottom: 0.3rem;
    }
    .diary a {
        padding-left: 1rem;
        font-size: 1rem;
    }

    @media (max-width: 720px) {
        .diary {
            margin-bottom: 2rem;
        }
        .diary ul li {
            flex-direction: column;
            align-items: flex-start;
            padding-left: 1.5rem;
            padding-bottom: 1.5rem;
        }
        .diary ul li::before {
            left: calc(1.5rem - 1rem - 3px);
        }
        .diary ul li::after {
            left: calc(1.5rem - 1rem);
        }
        .diary ul li .date {
            min-width: auto;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        .diary ul li :global(> *) {
            margin: 0;
            padding: 0;
        }
        .diary a {
            padding-left: 0.5rem;
            font-size: 0.95rem;
        }
        .diary ul li:last-child {
            padding-bottom: 2rem;
        }
    }
</style>
